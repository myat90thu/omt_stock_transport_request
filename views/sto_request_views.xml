<odoo>
  <!-- Action & Menus -->
  <record id="action_stock_transport_request" model="ir.actions.act_window">
    <field name="name">Stock Transport Requests</field>
    <field name="res_model">stock.transport.request</field>
    <field name="view_mode">list,form</field>
    <field name="help" type="html">
      <p class="o_view_nocontent_smiling_face">
        Create a stock transport request to move products between warehouses.
      </p>
    </field>
  </record>

  <menuitem id="menu_stock_transport_root" name="STO Requests" parent="stock.menu_stock_root" sequence="95"/>
  <menuitem id="menu_stock_transport_requests" name="Requests" parent="menu_stock_transport_root" action="action_stock_transport_request"/>

  <!-- List view -->
  <record id="view_stock_transport_request_list" model="ir.ui.view">
    <field name="name">stock.transport.request.list</field>
    <field name="model">stock.transport.request</field>
    <field name="arch" type="xml">
      <list string="Stock Transport Requests">
        <field name="name"/>
        <field name="requesting_warehouse_id"/>
        <field name="destination_warehouse_id"/>
        <field name="requested_by"/>
        <field name="requested_date"/>
        <field name="total_qty"/>
        <field name="total_value"/>
        <field name="state"/>
      </list>
    </field>
  </record>

  <!-- Form view -->
  <record id="view_stock_transport_request_form" model="ir.ui.view">
    <field name="name">stock.transport.request.form</field>
    <field name="model">stock.transport.request</field>
    <field name="arch" type="xml">
      <form string="Stock Transport Request">
        <header>
          <button name="action_confirm" type="object" string="Confirm" invisible="state != 'draft'"/>
          <button name="action_approve" type="object" string="Approve" invisible="state != 'waiting_approval'" groups="base.group_user"/>
          <button name="action_done" type="object" string="Done" invisible="state != 'approved'" groups="base.group_user"/>

          <button name="action_cancel" type="object" string="Cancel" invisible="state != 'draft' and state != 'confirmed' and state != 'waiting_approval'"/>
          <button name="action_set_draft" type="object" string="Set to Draft" invisible="state != 'cancelled'"/>
          <field name="state" widget="statusbar" statusbar_visible="draft,waiting_approval,approved,confirmed,done,cancelled"/>
        </header>
        <sheet>
          <group>
            <group>
              <field name="name" readonly="1"/>
              <field name="origin"/>
              <field name="company_id"/>
              <field name="requested_by"/>
              <field name="requested_date"/>
            </group>
            <group>
              <field name="requesting_warehouse_id"/>
              <field name="destination_warehouse_id"/>
              <field name="state" readonly="1"/>
            </group>
          </group>
          <notebook>
            <page string="Lines">
              <field name="line_ids" nolabel="1">
                <list editable="bottom">
                  <field name="product_id"/>
                  <field name="product_uom_id"/>
                  <field name="product_uom_qty"/>
                  <field name="scheduled_date"/>
                  <field name="linked_move_id"/>
                </list>
              </field>
            </page>
            <page string="Totals">
              <group>
                <field name="total_qty" readonly="1"/>
                <field name="total_value" readonly="1"/>
              </group>
            </page>
          </notebook>
        </sheet>
      </form>
    </field>
  </record>
</odoo>