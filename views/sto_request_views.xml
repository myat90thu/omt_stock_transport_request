<odoo>
  <!-- Action & Menus -->
  <record id="action_stock_transport_request" model="ir.actions.act_window">
    <field name="name">Stock Transport Requests</field>
    <field name="res_model">stock.transport.request</field>
    <field name="view_mode">list,form</field>
    <field name="help" type="html">
      <p class="o_view_nocontent_smiling_face">
        Create a stock transport request to move products between warehouses.
      </p>
    </field>
  </record>

  <menuitem id="menu_stock_transport_root" name="STO Requests" parent="stock.menu_stock_root" sequence="95"/>
  <menuitem id="menu_stock_transport_requests" name="Requests" parent="menu_stock_transport_root" action="action_stock_transport_request"/>

  <!-- List view -->
  <record id="view_stock_transport_request_list" model="ir.ui.view">
    <field name="name">stock.transport.request.list</field>
    <field name="model">stock.transport.request</field>
    <field name="arch" type="xml">
      <list string="Stock Transport Requests">
        <field name="name"/>
        <field name="requesting_warehouse_id"/>
        <field name="providing_warehouse_id"/>
        <field name="requested_by"/>
        <field name="requested_date"/>
        <field name="total_qty"/>
        <field name="total_value"/>
        <field name="need_revision"/>
        <field name="state"/>
      </list>
    </field>
  </record>

  <!-- Form view -->
  <record id="view_stock_transport_request_form" model="ir.ui.view">
    <field name="name">stock.transport.request.form</field>
    <field name="model">stock.transport.request</field>
    <field name="arch" type="xml">
      <form string="Stock Transport Request">
        <header>
          <button name="action_request" type="object" string="Request" invisible="state != 'draft'" class="btn-primary"/>
          <button name="action_approve" type="object" string="Approve" 
                  invisible="state != 'requested' or need_revision == True" 
                  groups="base.group_user"/>
          <button name="action_set_draft" type="object" string="Set to Draft" 
                  invisible="state not in ['requested', 'cancelled']"/>
          <button name="action_cancel" type="object" string="Cancel" 
                  invisible="state not in ['draft', 'requested']"/>
          <field name="state" widget="statusbar" statusbar_visible="draft,requested,approved,confirmed"/>
        </header>
        <sheet>
          <div class="oe_button_box" name="button_box" invisible="not picking_ids">
            <button class="oe_stat_button" type="object" name="action_view_pickings" icon="fa-truck">
              <field string="Pickings" name="picking_ids" widget="statinfo"/>
            </button>
          </div>
          <div class="alert alert-warning" role="alert" invisible="not need_revision">
            <strong>Revision Needed:</strong> This request exceeds allowed limits or available stock. Please adjust quantities.
          </div>
          <group>
            <group>
              <field name="name" readonly="1"/>
              <field name="origin"/>
              <field name="company_id"/>
              <field name="requested_by"/>
              <field name="requested_date"/>
            </group>
            <group>
              <field name="requesting_warehouse_id" options="{'no_create': True}"/>
              <field name="providing_warehouse_id" options="{'no_create': True}"/>
              <field name="need_revision" invisible="1"/>
            </group>
          </group>
          <notebook>
            <page string="Lines">
              <field name="line_ids" nolabel="1">
                <list editable="bottom">
                  <field name="product_id"/>
                  <field name="product_uom_id"/>
                  <field name="product_uom_qty"/>
                  <field name="product_free_qty" readonly="1"/>
                  <field name="scheduled_date"/>
                </list>
              </field>
            </page>
            <page string="Totals">
              <group>
                <field name="total_qty" readonly="1"/>
                <field name="total_value" readonly="1"/>
              </group>
            </page>
            <page string="Pickings" invisible="not picking_ids">
              <field name="picking_ids" nolabel="1">
                <list>
                  <field name="name"/>
                  <field name="picking_type_id"/>
                  <field name="location_id"/>
                  <field name="location_dest_id"/>
                  <field name="state"/>
                </list>
              </field>
            </page>
          </notebook>
        </sheet>
        <div class="oe_chatter">
          <field name="message_follower_ids"/>
          <field name="activity_ids"/>
          <field name="message_ids"/>
        </div>
      </form>
    </field>
  </record>
</odoo>