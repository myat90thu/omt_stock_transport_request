<odoo>
  <record id="view_stock_transport_approval_rule_tree" model="ir.ui.view">
    <field name="name">stock.transport.approval.rule.tree</field>
    <field name="model">stock.transport.approval.rule</field>
    <field name="arch" type="xml">
      <list>
        <field name="name"/>
        <field name="company_id"/>
        <field name="min_qty"/>
        <field name="max_qty"/>
        <field name="min_value"/>
        <field name="max_value"/>
        <field name="approve_required"/>
        <field name="auto_create_picking"/>
        <field name="sequence"/>
        <field name="active"/>
      </list>
    </field>
  </record>

  <record id="view_stock_transport_approval_rule_form" model="ir.ui.view">
    <field name="name">stock.transport.approval.rule.form</field>
    <field name="model">stock.transport.approval.rule</field>
    <field name="arch" type="xml">
      <form>
        <sheet>
          <group>
            <field name="name"/>
            <field name="active"/>
            <field name="sequence"/>
            <field name="company_id"/>
          </group>
          <group>
            <field name="min_qty"/>
            <field name="max_qty"/>
            <field name="min_value"/>
            <field name="max_value"/>
            <field name="currency_id" readonly="1"/>
          </group>
          <group>
            <field name="approve_required"/>
            <field name="auto_create_picking"/>
            <field name="approver_group_id"/>
          </group>
        </sheet>
      </form>
    </field>
  </record>

  <record id="action_stock_transport_approval_rules" model="ir.actions.act_window">
    <field name="name">STO Approval Rules</field>
    <field name="res_model">stock.transport.approval.rule</field>
    <field name="view_mode">list,form</field>
  </record>

  <menuitem id="menu_stock_transport_rules" name="Approval Rules" parent="menu_stock_transport_root" action="action_stock_transport_approval_rules"/>
</odoo>